@model CookieWeb.Models.LoginModel
<div class="well main">
    Please login before you get to the secret section for this site...<br />
    user: demo <br />
    password demo<br />
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        { 
        <table>
            <tr>
                <td colspan="2">
                    @Html.ValidationSummary()                 
                </td>
            </tr>
            <tr>
                <td>UserID:</td>
                <td>
                    <input type="text" name="UserId"  value="@Model.UserId" />
                </td>
            </tr>
            <tr>
                <td>Password:</td>
                <td><input type="password" name="Password" value="@Model.Password"/></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" class="btn btn-lg btn-default" value="OK" name="ACTION" />
                </td>
            </tr>
        </table>
    }

</div>
