//https://docs.microsoft.com/en-us/dotnet/articles/core/tools/project-json
{
  "title": "ispsession.io Session State Broker",    
  "copyright": "(c) 2001-2016, ADC Cure, Amsterdam",
  "description": "Session State broker for AspNetCore, compatible with classic ASP and classic ASP.NET (when combined with respective session.io products)",
  "version": "1.0.10-*",
  "dependencies": {
    "NETStandard.Library": { "version": "1.5.0-rc2-24027" },
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0",
    "StackExchange.Redis.StrongName.Core": "1.1.605"
  },
  "frameworks": {
    "netstandard1.5": {
      "imports": "dnxcore50"
    },
    "net461":  {}  
  },
  "scripts": {
    "postcompile": [ "dotnet pack --no-build --configuration %compile:Configuration%" ]
  },
  "packOptions": {
    "files": [ "HowToConfigure_ISP_Session.txt" ],
    "licenseUrl": "http://ispsession.io/license",
    "iconUrl": "http://ispsession.io/images/Platipus3_Transparant_small.png",
    "owners": [ "ADC Cure" ],
    "tags": [ "Session", "SessionState" ],
    "releaseNotes": "1.0.10 fixes decimal array persistance and \r\nCurrency (VT_CY) compatibility. Please read howToConfigure_ISP_Session.txt or go to the website ispsession.io. This is an evaluation package that expires at the end of the month. The purchased assembly, contains extra optimizations, however, the demo performs very well too.",
    "requireLicenseAcceptance": true,
    "summary": "ISP Session is a lean and mean, verstatile and performant Session State broker that functions as a replacement for built in session state management, for classic ASP/classic ASP.NET and AspNetCore. Enables interoperable Sessionstate between those three frameworks. Uses Redis 2.8+ as a backend storage server."
  },
  "configurations": {
    "Debug": {
      "buildOptions": {
        "keyFile": "..\\adccure.snk",
        "define": [ "DEBUG", "TRACE", "Demo"],
        "optimize": false,
        "allowUnsafe": true,
        "outputName": "ispsession.io"
      }
    },
    "Release": {
      "buildOptions": {
        "keyFile": "..\\adccure.snk",
        "define": [ "RELEASE", "TRACE", "Demo"],
        "optimize": true,
        "allowUnsafe": true,
        "outputName": "ispsession.io"
      }
    }
  }
}
